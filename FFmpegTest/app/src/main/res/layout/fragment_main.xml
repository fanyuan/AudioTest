<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="8dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_audio_path_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="#33ffff00"
          android:text="/storage/emulated/0/lzy.mp3"
          />

      <TextView
          android:id="@+id/tv_audio_length_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#33ffff00"
          android:text="音频时长："
          android:textColor="#ff0000"
          />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pick_audio_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="选择音频"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/btn_decode_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解码视频"
        />
    <Button
        android:id="@+id/btn_decode_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解码音频"
        />
    <Button
        android:id="@+id/btn_encode_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编码视频"
        />
    <Button
        android:id="@+id/btn_encode_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编码音频"
        />
  </LinearLayout>
  <TextView
      android:id="@+id/tv_msg_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:background="#33ffff00"
      android:textColor="#ff0000"
      />

</LinearLayout>
